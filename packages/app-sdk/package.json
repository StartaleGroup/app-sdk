{
	"name": "@startale/app-sdk",
	"version": "1.0.0",
	"description": "Superapp SDK",
	"keywords": [
		"startale",
		"superapp",
		"sdk",
		"sdk",
		"web3"
	],
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"browser": "dist/app-sdk.min.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.js"
		},
		"./payment": {
			"types": "./dist/interface/payment/index.d.ts",
			"import": "./dist/interface/payment/index.js",
			"require": "./dist/interface/payment/index.js"
		},
		"./spend-permission": {
			"types": "./dist/interface/public-utilities/spend-permission/index.d.ts",
			"import": "./dist/interface/public-utilities/spend-permission/index.js",
			"require": "./dist/interface/public-utilities/spend-permission/index.js"
		},
		"./ui-assets": {
			"types": "./dist/ui/assets/index.d.ts",
			"import": "./dist/ui/assets/index.js",
			"require": "./dist/ui/assets/index.js"
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"sideEffects": false,
	"repository": "https://github.com/StartaleGroup/superapp-sdk",
	"author": "Startale",
	"license": "Apache-2.0",
	"scripts": {
		"clean": "rm -rf dist && rm -rf node_modules",
		"pretest": "node compile-assets.cjs",
		"test": "vitest",
		"test:coverage": "vitest --coverage",
		"prebuild": "rm -rf ./dist",
		"build": "node compile-assets.cjs && tsc -p ./tsconfig.build.json && tsc-alias && pnpm run build:browser",
		"build:browser": "rollup -c rollup.config.js",
		"prepublishOnly": "pnpm run build",
		"dev": "pnpm run build && tsc --watch & tsc-alias --watch",
		"typecheck": "tsc --noEmit",
		"lint": "biome lint .",
		"format": "biome format . --write",
		"format:check": "biome check . --formatter-enabled=true --linter-enabled=false --organize-imports-enabled=false",
		"size": "size-limit"
	},
	"dependencies": {
		"abitype": "^1.1.1",
		"@noble/hashes": "1.4.0",
		"clsx": "1.2.1",
		"eventemitter3": "5.0.1",
		"idb-keyval": "6.2.1",
		"ox": "^0.9.6",
		"preact": "10.24.2",
		"viem": "^2.31.7",
		"zustand": "5.0.3"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^25.0.7",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@rollup/plugin-replace": "^5.0.5",
		"@rollup/plugin-typescript": "^11.1.6",
		"@size-limit/preset-big-lib": "^11.1.6",
		"@testing-library/jest-dom": "^6.5.0",
		"@testing-library/preact": "^3.2.4",
		"@types/node": "^22.18.10",
		"@vitest/coverage-v8": "2.1.9",
		"@vitest/web-worker": "^2.1.9",
		"fake-indexeddb": "^6.0.0",
		"glob": "^11.0.0",
		"jest-websocket-mock": "^2.4.0",
		"jsdom": "^25.0.1",
		"nodemon": "^3.1.0",
		"rollup": "^4.9.6",
		"rollup-plugin-terser": "^7.0.2",
		"sass": "^1.64.1",
		"size-limit": "^11.1.6",
		"tsc-alias": "^1.8.8",
		"tslib": "^2.6.0",
		"typescript": "^5.9.3",
		"vitest": "^2.1.9"
	},
	"size-limit": [
		{
			"path": "./dist/index.js",
			"limit": "31 KB",
			"import": "*"
		}
	]
}
